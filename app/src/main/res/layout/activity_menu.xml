<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="id.sch.smktelkom_mlg.project.xiirpl45152535.kuliner.MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageLogo"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <Button
            android:layout_gravity="center"
            android:background="@drawable/listbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonList" />

        <Button
            android:layout_gravity="center"
            android:background="@drawable/gbrbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonGambar" />

        <Button
            android:layout_gravity="center"
            android:background="@drawable/petabtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonPeta" />

        <Button
            android:layout_gravity="center"
            android:background="@drawable/infobtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buttonInfo" />
    </LinearLayout>
</ScrollView>